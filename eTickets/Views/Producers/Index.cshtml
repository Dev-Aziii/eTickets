@model IEnumerable<eTickets.Models.Producer>

@{
    ViewData["Title"] = "Producers";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="table-responsive mt-4">
            <table class="table table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().ProfilePictureUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Bio)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var prod in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@prod.ProfilePictureUrl" alt="@prod.FullName" style="max-width: 150px;" />
                            </td>
                            <td class="align-middle">@Html.DisplayFor(_ => prod.FullName)</td>
                            <td class="align-middle">@Html.DisplayFor(_ => prod.Bio)</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-info" title="Details"><i class="bi bi-eye-fill"></i></a>
                                <a class="btn btn-outline-primary" title="Edit"><i class="bi bi-pen-fill"></i></a>
                                <a class="btn btn-outline-warning" title="archive"><i class="bi bi-archive-fill"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
