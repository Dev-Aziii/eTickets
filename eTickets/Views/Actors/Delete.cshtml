@model eTickets.Models.Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="d-flex justify-content-center align-items-start mt-4">
    <div style="width: 800px;">
        <a asp-action="Index" class="btn btn-outline-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Back
        </a>

        <div class="card shadow">
            <div class="card-body">
                <h4 class="card-title mb-4 text-center">Delete Actor</h4>
                    <div class="row g-3 align-items-center">
                        <div class="col-md-4 text-center">
                            <img class="rounded-circle border border-secondary"
                                 style="width: 120px; height: 120px; object-fit: cover;"
                                 src="@(!string.IsNullOrWhiteSpace(Model.ProfilePictureUrl) ? Model.ProfilePictureUrl : "https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/person-circle.svg")"
                                 alt="Profile Picture" />
                        </div>

                        <div class="col-md-8">
                            <div class="mb-3">
                                <label class="form-label fw-bold">Profile Picture URL:</label>
                                <div class="border p-2 rounded bg-light">
                                    @Model.ProfilePictureUrl
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Full Name:</label>
                                <div class="border p-2 rounded bg-light">
                                    @Model.FullName
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label fw-bold">Biography:</label>
                                <div class="border p-2 rounded bg-light">
                                    @Model.Bio
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <form method="post" asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                            <button type="submit" value="Update" class="btn btn-danger w-100">Confirm</button>
                        </form>
                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const output = document.getElementById('ProfilePicturePreview');
            const placeholderUrl = "https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/person-circle.svg";

            function updatePreview() {
                const url = $("#ProfilePictureUrl").val();
                output.src = url ? url : placeholderUrl;
            }

            updatePreview();

            $("#ProfilePictureUrl").on("input", function () {
                updatePreview();
            });
        });
    </script>
}
