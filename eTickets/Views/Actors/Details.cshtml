@model eTickets.Models.Actor

@{
    ViewData["Title"] = "Actor Details";
}

<div class="d-flex justify-content-center align-items-start mt-4">
    <div style="width: 800px;">
        <a asp-action="Index" class="btn btn-outline-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Back
        </a>

        <div class="card shadow">
            <div class="card-body">
                <h4 class="card-title mb-4 text-center">Actor Details</h4>
                <div class="row g-3 align-items-center">
                    <!-- Profile Picture -->
                    <div class="col-md-4 text-center">
                        <img class="rounded-circle border border-secondary"
                             style="width: 120px; height: 120px; object-fit: cover;"
                             src="@(!string.IsNullOrWhiteSpace(Model.ProfilePictureUrl) ? Model.ProfilePictureUrl : "https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/person-circle.svg")"
                             alt="Profile Picture" />
                    </div>

                    <!-- Details -->
                    <div class="col-md-8">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Profile Picture URL:</label>
                            <div class="border p-2 rounded p-2 rounded bg-dark-subtle text-white">
                                @Model.ProfilePictureUrl
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Full Name:</label>
                            <div class="border p-2 rounded bg-dark-subtle text-white">
                                @Model.FullName
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Biography:</label>
                            <div class="border p-2 rounded p-2 rounded bg-dark-subtle text-white">
                                @Model.Bio
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
