@model IEnumerable<eTickets.Models.Actor>

@{
    ViewData["Title"] = "Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="table-responsive mt-4">
            <table class="table table-hover text-center">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().ProfilePictureUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Bio)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actor in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@actor.ProfilePictureUrl" alt="@actor.FullName" style="max-width: 150px;" />
                            </td>
                            <td class="align-middle">@Html.DisplayFor(_ => actor.FullName)</td>
                            <td class="align-middle">@Html.DisplayFor(_ => actor.Bio)</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-info">Details</a>
                                <a class="btn btn-outline-primary">Edit</a>
                                <a class="btn btn-outline-danger">Delete</a> 
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
