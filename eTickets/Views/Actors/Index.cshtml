@model eTickets.Models.ViewModels.ActorListViewModel

@{
    ViewData["Title"] = "Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="table-responsive">
            <table class="table table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Actors.First().ProfilePictureUrl)</th>
                        <th>@Html.DisplayNameFor(model => model.Actors.First().FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Actors.First().Bio)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var actor in Model.Actors)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@actor.ProfilePictureUrl" alt="@actor.FullName" style="max-width: 150px;" />
                            </td>
                            <td class="align-middle">@Html.DisplayFor(_ => actor.FullName)</td>
                            <td class="align-middle" style="max-width: 350px;">@Html.DisplayFor(_ => actor.Bio)</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-info" title="Details" asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id"><i class="bi bi-eye-fill"></i></a>
                                <a class="btn btn-outline-primary" title="Edit" asp-controller="Actors" asp-action="Edit" asp-route-id="@actor.Id"><i class="bi bi-pen-fill"></i></a>
                                <a class="btn btn-outline-danger" title="Delete" asp-controller="Actors" asp-action="Delete" asp-route-id="@actor.Id"><i class="bi bi-archive-fill"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <!-- Previous Button -->
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.CurrentPage - 1)">
                            Previous
                        </a>
                    </li>

                    <!-- Page Numbers -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link"
                               asp-action="Index"
                               asp-route-pageNumber="@i">
                                @i
                            </a>
                        </li>
                    }

                    <!-- Next Button -->
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           asp-action="Index"
                           asp-route-pageNumber="@(Model.CurrentPage + 1)">
                            Next
                        </a>
                    </li>
                </ul>
            </nav>

        </div>
    </div>
</div>

<a asp-action="Create"
   class="btn btn-primary rounded-circle shadow-lg position-fixed"
   style="bottom: 70px; right: 30px; width: 60px; height: 60px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem;">
    <i class="bi bi-plus-circle"></i>
</a>
