@model eTickets.Models.Actor

@{
    ViewData["Title"] = "Add Actor";
}

<div class="d-flex justify-content-center align-items-start mt-4">
    <div style="width: 800px;">
        <a asp-action="Index" class="btn btn-outline-secondary mb-3">
            <i class="bi bi-arrow-left"></i> Back
        </a>

        <div class="card shadow">
            <div class="card-body">
                <h4 class="card-title mb-4 text-center">Add Actor</h4>
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <div class="row g-3 align-items-center">
                        <div class="col-md-4 text-center">
                            <img class="rounded-circle border border-secondary"
                                 id="ProfilePicturePreview"
                                 style="width: 120px; height: 120px; object-fit: cover;"
                                 src="https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/person-circle.svg"
                                 alt="Profile Preview" />
                        </div>

                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="ProfilePictureUrl" class="form-label"></label>
                                <input asp-for="ProfilePictureUrl" class="form-control" placeholder="Enter profile picture URL" required />
                                <span asp-validation-for="ProfilePictureUrl" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="FullName" class="form-label"></label>
                                <input asp-for="FullName" class="form-control" placeholder="Enter full name" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Bio" class="form-label"></label>
                                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Enter biography" required></textarea>
                                <span asp-validation-for="Bio" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-3">
                        <button type="submit" class="btn btn-primary w-100">Add Actor</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            const output = document.getElementById('ProfilePicturePreview');
            const placeholderUrl = "https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/person-circle.svg";

            function updatePreview() {
                const url = $("#ProfilePictureUrl").val();
                output.src = url ? url : placeholderUrl;
            }

            updatePreview();

            $("#ProfilePictureUrl").on("input", function () {
                updatePreview();
            });
        });
    </script>
}
