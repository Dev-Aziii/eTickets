@model IEnumerable<eTickets.Models.Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="table-responsive">
            <table class="table table-hover text-center">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Logo)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cinema in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <img class="rounded-circle" src="@cinema.Logo" alt="@cinema.Name" style="max-width: 150px;" />
                            </td>
                            <td class="align-middle">@Html.DisplayFor(_ => cinema.Name)</td>
                            <td class="align-middle" style="max-width: 350px;">@Html.DisplayFor(_ => cinema.Description)</td>
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" title="Edit"><i class="bi bi-pen-fill"></i></a>
                                <a class="btn btn-outline-warning" title="archive"><i class="bi bi-archive-fill"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
